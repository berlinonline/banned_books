<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations 
    xmlns="http://agavi.org/agavi/config/parts/databases/1.0" 
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0">
    <ae:configuration>
        <databases default="Author.Write">

            <!-- Repository write connection (storage) -->
            <database name="Author.Write" class="Honeybee\Agavi\Database\CouchDb\Database">
                <ae:parameter name="url">http://127.0.0.1:5984/</ae:parameter>
                <ae:parameter name="database">%core.environment%_%core.project_prefix%_author</ae:parameter>
                <ae:parameter name="setup">true</ae:parameter>
                <ae:parameter name="scripts_dir">%core.modules_dir%/Author/config/couchdb/</ae:parameter>
            </database>

            <!-- Repository read connection (finder) -->
            <database name="Author.Read" class="Honeybee\Agavi\Database\ElasticSearch\Database">
                <ae:parameter name="host">127.0.0.1</ae:parameter>
                <ae:parameter name="port">9200</ae:parameter>
                <ae:parameter name="transport">Http</ae:parameter>
                <ae:parameter name="index">%core.environment%_%core.project_prefix%_author</ae:parameter>
                <ae:parameter name="setup">true</ae:parameter>
                <ae:parameter name="mapping_dir">%core.modules_dir%/Author/config/elasticsearch/</ae:parameter>
                <ae:parameter name="river">
                    <ae:parameter name="couch_db">%core.environment%_%core.project_prefix%_author</ae:parameter>
                </ae:parameter>
            </database>

            <!-- Example (couchdb) export-database config to serve a Pulq-Frontend data:
            <database name="Author.Pulq.Fe" class="Honeybee\Agavi\Database\CouchDb\Database">
                <ae:parameter name="url">http://127.0.0.1:5984/</ae:parameter>
                <ae:parameter name="database">%core.environment%_%core.project_prefix%_pulq_fe_author</ae:parameter>
                <ae:parameter name="setup">true</ae:parameter>
                <ae:parameter name="scripts_location">%project.dir%/config/couchdb/</ae:parameter>
            </database>
            -->
        </databases>
    </ae:configuration>
</ae:configurations>
