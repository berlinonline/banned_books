<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://agavi.org/agavi/config/parts/validators/1.0"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
    parent="%core.module_dir%/Book/config/validators.xml">
    <ae:configuration>
        <validators translation_domain="${module.prefix}.errors">
            <validator class="string" name="invalid_step" required="true">
                <arguments>
                    <argument>step</argument>
                </arguments>
                <errors>
                    <error>An invalid step was given.</error>
                </errors>
            </validator>
            <validator class="string" name="invalid_gate" required="true">
                <arguments>
                    <argument>gate</argument>
                </arguments>
                <errors>
                    <error>An invalid gate was given.</error>
                </errors>
            </validator>
        </validators>
    </ae:configuration>
</ae:configurations>
