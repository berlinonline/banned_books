<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://berlinonline.de/schemas/honeybee/workflow/1.0"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0">
    <ae:configuration>
        <workflow name="book.default">
            <description>
                This workflow defines the process flow for editing/publishing Book data.
                The looks something like this: Edit -> Publish -> Archive -> Edit -> ...
            </description>
            <start_at>edit</start_at>
            <steps>
                <step name="edit">
                    <description>Manually edit a book document.</description>
                    <plugin type="Honeybee\Core\Workflow\Plugin\InteractivePlugin">
                        <ae:parameters>
                            <ae:parameter name="module">Book</ae:parameter>
                            <ae:parameter name="action">Edit</ae:parameter>
                        </ae:parameters>
                        <gates>
                            <gate_step label="approve book" name="promote">publish</gate_step>
                            <gate_step label="delete book" name="delete">delete</gate_step>
                        </gates>
                    </plugin>
                </step>

                <step name="publish">
                    <description>Tries to publish a given book document.</description>
                    <plugin type="Honeybee\Core\Workflow\Plugin\PublishPlugin">
                        <ae:parameters>
                            <ae:parameter name="exports">
                                <ae:parameters>
                                    <ae:parameter>pulq-fe</ae:parameter>
                                </ae:parameters>
                            </ae:parameter>
                            <ae:parameter name="async">true</ae:parameter>
                        </ae:parameters>
                        <gates>
                            <gate_step label="publishing ok" name="promote">published</gate_step>
                            <gate_step label="publishing error" name="demote">edit</gate_step>
                        </gates>
                    </plugin>
                </step>

                <step name="published">
                    <description>Interactive editing/corrections within a published state.</description>
                    <plugin type="Honeybee\Core\Workflow\Plugin\InteractivePlugin">
                        <ae:parameters>
                            <ae:parameter name="module">Book</ae:parameter>
                            <ae:parameter name="action">Edit</ae:parameter>
                            <ae:parameter name="exports">
                                <ae:parameters>
                                    <ae:parameter>pulq-fe</ae:parameter>
                                </ae:parameters>
                            </ae:parameter>
                        </ae:parameters>
                        <gates>
                            <gate_step label="archive book" name="promote">archive</gate_step>
                            <gate_step label="depublish book" name="demote">edit</gate_step>
                            <gate_step label="delete book" name="delete">delete</gate_step>
                        </gates>
                    </plugin>
                </step>

                <step name="archive">
                    <description>Marks a given book as archived and depublishes it.</description>
                    <plugin type="Honeybee\Core\Workflow\Plugin\ArchivePlugin">
                        <gates>
                            <gate_step label="archiving ok" name="promote">archived</gate_step>
                            <gate_step label="archiving error" name="demote">published</gate_step>
                        </gates>
                    </plugin>
                </step>

                <step name="archived">
                    <description>Represents the archived state.</description>
                    <plugin type="Honeybee\Core\Workflow\Plugin\NullPlugin">
                        <gates>
                            <gate_step label="reset to edit" name="demote">edit</gate_step>
                            <gate_step label="delete book" name="delete">delete</gate_step>
                        </gates>
                    </plugin>
                </step>

                <step name="delete">
                    <description>
                        Marks a given Book as deleted.
                        During a configurable time period the item(place) can then be recovered,
                        before being removed by the system's maintenance.
                    </description>
                    <plugin type="Honeybee\Core\Workflow\Plugin\DeletePlugin">
                        <gates>
                            <gate_end name="suspend" />
                        </gates>
                    </plugin>
                </step>
            </steps>
        </workflow>
    </ae:configuration>
</ae:configurations>
