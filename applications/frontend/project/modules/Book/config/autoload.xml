<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations 
    xmlns="http://agavi.org/agavi/config/parts/autoload/1.0" 
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0">
    <ae:configuration>

        <!-- Agavi -->
        <autoload name="BookBaseAction">%core.module_dir%/Book/lib/agavi/action/BookBaseAction.class.php</autoload>
        <autoload name="BookBaseView">%core.module_dir%/Book/lib/agavi/view/BookBaseView.class.php</autoload>
        
        <!-- Service -->
        <autoload name="BookService">%core.module_dir%/Book/lib/BookService.class.php</autoload>
        <autoload name="AuthorService">%core.module_dir%/Book/lib/AuthorService.class.php</autoload>
        <autoload name="PublisherService">%core.module_dir%/Book/lib/PublisherService.class.php</autoload>
        <autoload name="AlphabeticalService">%core.module_dir%/Book/lib/AlphabeticalService.class.php</autoload>

        <!-- Data Objects -->
        <autoload name="Book">%core.module_dir%/Book/lib/Book.class.php</autoload>
        <autoload name="Author">%core.module_dir%/Book/lib/Author.class.php</autoload>
        <autoload name="Publisher">%core.module_dir%/Book/lib/Publisher.class.php</autoload>

        <!-- Validators -->
        <autoload name="SlugValidator">%core.module_dir%/Book/lib/agavi/validate/SlugValidator.class.php</autoload>
        <autoload name="AlnumCharacterValidator">%core.module_dir%/Book/lib/agavi/validate/AlnumCharacterValidator.class.php</autoload>
    </ae:configuration>
</ae:configurations>
